<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TrangChu.TrangChuController">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="100sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="50dp"
                android:paddingVertical="10dp"
                android:src="@drawable/account" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:text="Sinh viên: Nguyễn Đình G" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="17sp"
                android:paddingVertical="10dp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"
                android:text="Mã sinh viên: 2018600123" />
        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btnNapTien"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nạp tiền tài khoản"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent" />

    <Button
        android:id="@+id/btnDangKyMonHoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng ký môn học"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/btnCacKhoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Các khoản đã thanh toán"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/btnMonHocDaDangKy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Môn học đã đăng ký"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent"/>

    <Button
        android:id="@+id/btnTTDangKyLop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông tin đăng ký lớp"
        android:textSize="17sp"
        android:paddingVertical="10dp"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFF"
        android:textAllCaps="false"
        android:backgroundTint="@color/colorAccent"/>

</LinearLayout>